# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/leads-db
PORT=3001

# CORS Configuration
# Orígenes permitidos separados por comas
# Para desarrollo: http://localhost:3000
# Para producción: https://tu-sitio-web.com,https://www.tu-sitio-web.com
# Para permitir todos (no recomendado en producción): dejar vacío o usar *
ALLOWED_ORIGINS=http://localhost:3000,https://tu-sitio-web.com

# Email Configuration
# Set to 'true' to enable email notifications
EMAIL_ENABLED=false

# SMTP Server Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-contraseña-de-aplicacion
EMAIL_FROM=tu-email@gmail.com

# Notification recipient
NOTIFICATION_EMAIL=destinatario@example.com

